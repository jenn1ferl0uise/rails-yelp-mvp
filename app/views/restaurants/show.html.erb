<div class="container">
  <h1><%= @restaurant.name %></h1>
  <p><strong>Food type:</strong> <%= @restaurant.category %></p>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Phone Number:</strong> <%= @restaurant.phone_number %></p>

  <h2>Reviews</h2>

  <ul>
    <% @restaurant.reviews.each do |review| %>
    <li>
      <h3><%= review.rating "STARS" %></h3>
      <p><%= review.content  %></p>
    </li>
    <% end %>
  </ul>

  <div class="btn btn-dark">
    <%= link_to "Add review", new_restaurant_review_path(@restaurant.id) %>
  </div>
  <div class="btn btn-dark">
    <%= link_to "Back to Restaurants", restaurants_path %>
  </div>


</div>
